<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_dnd_start_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start_at"
        android:textColor="?attr/colorOnSecondaryContainer"
        android:fontFamily="@font/pretendard"
        android:layout_margin="@dimen/usual_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_dnd_end_tag"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_dnd_end_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/end_at"
        android:textColor="?attr/colorOnSecondaryContainer"
        android:fontFamily="@font/pretendard"
        android:layout_marginEnd="@dimen/usual_margin"
        android:layout_marginTop="@dimen/usual_margin"
        android:layout_marginBottom="@dimen/usual_margin"
        app:layout_constraintStart_toEndOf="@id/tv_dnd_start_tag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_dnd_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="오후 12:00"
        android:textSize="24sp"
        android:textColor="?attr/colorOnSecondaryContainer"
        android:fontFamily="@font/pretendard_black"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_margin="@dimen/usual_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_dnd_end"
        app:layout_constraintTop_toBottomOf="@id/tv_dnd_start_tag" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_dnd_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="오후 12:00"
        android:textSize="24sp"
        android:textColor="?attr/colorOnSecondaryContainer"
        android:fontFamily="@font/pretendard_black"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_marginEnd="@dimen/usual_margin"
        android:layout_marginTop="@dimen/usual_margin"
        android:layout_marginBottom="@dimen/usual_margin"
        app:layout_constraintStart_toEndOf="@id/tv_dnd_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dnd_start_tag" />

</androidx.constraintlayout.widget.ConstraintLayout>