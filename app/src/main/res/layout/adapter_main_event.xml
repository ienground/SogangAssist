<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_goal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/usual_margin"
    app:cardBackgroundColor="?attr/colorAccent"
    app:cardCornerRadius="@dimen/layout_radius"
    app:cardElevation="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_content_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            tools:text="Exam"
            android:textSize="26sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/pretendard_black"
            android:layout_margin="@dimen/usual_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_class_name"/>

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            tools:text="70일 째 순항 중"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/pretendard"
            android:layout_marginHorizontal="@dimen/usual_margin"
            android:layout_marginBottom="@dimen/usual_margin"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_content_name" />

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/progressBar"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/usual_margin"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:style="solid_line"
            app:progress_start_color="@android:color/white"
            app:progress_end_color="@android:color/white"
            app:progress_stroke_width="8dp"
            app:progress_stroke_cap="round"
            app:progress_background_color="@color/progress_background"
            app:progress_shader="sweep"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="16:00"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_black"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@id/progressBar"
            app:layout_constraintEnd_toEndOf="@id/progressBar"
            app:layout_constraintTop_toTopOf="@id/progressBar"
            app:layout_constraintBottom_toBottomOf="@id/progressBar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>