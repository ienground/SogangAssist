<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wholeView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sg_img_01"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <com.github.mmin18.widget.RealtimeBlurView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:realtimeBlurRadius="5dp"
        app:realtimeOverlayColor="@color/blur_background"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="오후 12:00"
        android:textColor="@color/gray"
        android:layout_marginHorizontal="@dimen/usual_margin"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide"
        app:layout_constraintBottom_toTopOf="@id/tv_sub_name" />

    <TextView
        android:id="@+id/tv_sub_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="실시간 강의"
        android:textColor="@color/black"
        android:textSize="42sp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:layout_marginHorizontal="@dimen/usual_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide"
        app:layout_constraintBottom_toTopOf="@id/tv_class_name" />

    <TextView
        android:id="@+id/tv_class_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="종교와세계문화"
        android:textColor="@color/gray"
        android:layout_marginHorizontal="@dimen/usual_margin"
        android:layout_marginBottom="@dimen/usual_margin_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/ic_icon"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_assignment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_time" />

    <ImageView
        android:id="@+id/ic_check"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_check_circle"
        app:tint="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@id/ic_icon"
        app:layout_constraintEnd_toEndOf="@id/ic_icon"
        app:layout_constraintTop_toTopOf="@id/ic_icon"
        app:layout_constraintBottom_toBottomOf="@id/ic_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>