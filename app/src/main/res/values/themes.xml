<resources>
    <style name="Theme.SogangAssist" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainer</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondaryContainer</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/colorTertiary</item>
        <item name="colorOnTertiary">@color/colorOnTertiary</item>
        <item name="colorTertiaryContainer">@color/colorTertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/colorOnTertiaryContainer</item>
        <!-- Neutral1 color-->
        <!-- Neutral2 color-->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>
        <item name="colorOutline">@color/colorOutline</item>

        <!-- Status bar color. -->
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!--         Customize your theme here.-->
        <item name="android:fontFamily">@font/pretendard</item>
    </style>

    <style name="AppTheme.Setting" parent="Theme.SogangAssist">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/navigationBarColor</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_corners_top</item>
    </style>

    <style name="Theme.SogangAssist.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="materialAlertDialogTitleIconStyle">@style/Theme.SogangAssist.MaterialAlertDialog.Tint</item>
    </style>

    <style name="Theme.SogangAssist.MaterialAlertDialog.Tint" parent="MaterialAlertDialog.Material3.Title.Icon.CenterStacked">
        <item name="android:tint">@color/white</item>
    </style>

</resources>